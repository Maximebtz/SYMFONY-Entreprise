{% extends 'base.html.twig' %}

{% block title %}Liste des employés{% endblock %}

{% block body %}

    <h1>Liste des employés</h1>

    {% for employe in employes %}
        <div class="list-entr">
            <a href="{{ path('show_employe', {'id': employe.id}) }}">{{employe}}</a>
            <div class="btns">
                <a class="btn btn-warning" href="{{ path('edit_employe', {'id': employe.id}) }}">Edit</a>
                <a class="btn btn-danger" href="{{ path('delete_employe', {'id': employe.id})}}">Supp</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
